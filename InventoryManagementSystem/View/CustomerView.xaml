<Window x:Class="InventoryManagementSystem.View.CustomerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="顧客管理" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="氏名" Width="40"/>
            <TextBox x:Name="SearchNameTextBox" Width="120"/>
            <Label Content="電話番号" Width="60" Margin="10,0,0,0"/>
            <TextBox x:Name="SearchPhoneTextBox" Width="120"/>
            <Label Content="メール" Width="40" Margin="10,0,0,0"/>
            <TextBox x:Name="SearchEmailTextBox" Width="150"/>
            <Button x:Name="SearchButton" Content="検索" Width="80" Margin="10,0,0,0" Click="SearchButton_Click"/>
            <Button x:Name="ClearSearchButton" Content="クリア" Width="80" Margin="5,0,0,0" Click="ClearSearchButton_Click"/>
        </StackPanel>
        <DataGrid x:Name="CustomerDataGrid" Grid.Row="1" AutoGenerateColumns="False" SelectionMode="Single" Margin="0,0,0,10" SelectionChanged="CustomerDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="氏名" Binding="{Binding Name}" Width="100"/>
                <DataGridTextColumn Header="住所" Binding="{Binding Address}" Width="200"/>
                <DataGridTextColumn Header="電話番号" Binding="{Binding Phone}" Width="100"/>
                <DataGridTextColumn Header="メール" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="登録日" Binding="{Binding RegisteredDate, StringFormat=yyyy/MM/dd}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="氏名" Width="50"/>
                <TextBox x:Name="NameTextBox" Width="150"/>
                <Label Content="住所" Width="50" Margin="10,0,0,0"/>
                <TextBox x:Name="AddressTextBox" Width="200"/>
                <Label Content="電話番号" Width="70" Margin="10,0,0,0"/>
                <TextBox x:Name="PhoneTextBox" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="メール" Width="50"/>
                <TextBox x:Name="EmailTextBox" Width="200"/>
                <Label Content="登録日" Width="60" Margin="10,0,0,0"/>
                <DatePicker x:Name="RegisteredDatePicker" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="AddButton" Content="追加" Width="80" Margin="0,0,10,0" Click="AddButton_Click"/>
                <Button x:Name="UpdateButton" Content="更新" Width="80" Margin="0,0,10,0" Click="UpdateButton_Click"/>
                <Button x:Name="DeleteButton" Content="削除" Width="80" Click="DeleteButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window> 