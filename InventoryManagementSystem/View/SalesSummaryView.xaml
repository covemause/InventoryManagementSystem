<Window x:Class="InventoryManagementSystem.View.SalesSummaryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="売上集計" Height="300" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Top">
            <Label Content="集計区分" Width="70"/>
            <ComboBox x:Name="SummaryTypeComboBox" Width="120" SelectionChanged="SummaryTypeComboBox_SelectionChanged" SelectedIndex="0">
                <ComboBoxItem Content="日別"/>
                <ComboBoxItem Content="月別"/>
                <ComboBoxItem Content="顧客別"/>
                <ComboBoxItem Content="商品別"/>
            </ComboBox>
            <StackPanel x:Name="DatePanel" Orientation="Horizontal" Margin="10,0,0,0" Visibility="Visible">
                <Label Content="指定日" Width="60"/>
                <DatePicker x:Name="TargetDatePicker" Width="120"/>
            </StackPanel>
            <StackPanel x:Name="MonthPanel" Orientation="Horizontal" Margin="10,0,0,0" Visibility="Collapsed">
                <Label Content="指定月" Width="60"/>
                <TextBox x:Name="TargetMonthTextBox" Width="80" ToolTip="yyyy-MM形式"/>
            </StackPanel>
            <StackPanel x:Name="CustomerPanel" Orientation="Horizontal" Margin="10,0,0,0" Visibility="Collapsed">
                <Label Content="顧客ID" Width="60"/>
                <TextBox x:Name="TargetCustomerIdTextBox" Width="80"/>
            </StackPanel>
            <StackPanel x:Name="ProductPanel" Orientation="Horizontal" Margin="10,0,0,0" Visibility="Collapsed">
                <Label Content="商品ID" Width="60"/>
                <TextBox x:Name="TargetProductIdTextBox" Width="80"/>
            </StackPanel>
            <Button x:Name="SummaryButton" Content="集計" Width="80" Margin="10,0,0,0" Click="SummaryButton_Click"/>
        </StackPanel>
        <DataGrid x:Name="SummaryDataGrid" Grid.Row="1" AutoGenerateColumns="True"/>
    </Grid>
</Window> 