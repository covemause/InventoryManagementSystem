<Window x:Class="InventoryManagementSystem.View.OrderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="注文管理" Height="500" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <!-- 検索欄 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="商品ID" Width="60"/>
            <TextBox x:Name="SearchProductIdTextBox" Width="80"/>
            <Label Content="商品名" Width="60" Margin="10,0,0,0"/>
            <TextBox x:Name="SearchProductNameTextBox" Width="120"/>
            <Label Content="顧客ID" Width="60" Margin="10,0,0,0"/>
            <TextBox x:Name="SearchCustomerIdTextBox" Width="80"/>
            <Label Content="数量" Width="40" Margin="10,0,0,0"/>
            <TextBox x:Name="SearchQuantityTextBox" Width="60"/>
            <Label Content="単価" Width="40" Margin="10,0,0,0"/>
            <TextBox x:Name="SearchUnitPriceTextBox" Width="80"/>
            <Label Content="金額" Width="40" Margin="10,0,0,0"/>
            <TextBox x:Name="SearchAmountTextBox" Width="80"/>
            <Label Content="注文日" Width="60" Margin="10,0,0,0"/>
            <DatePicker x:Name="SearchOrderDateFromPicker" Width="120"/>
            <Label Content="～" Width="20" HorizontalContentAlignment="Center"/>
            <DatePicker x:Name="SearchOrderDateToPicker" Width="120"/>
            <CheckBox x:Name="OnlineOrderOnlyCheckBox" Content="オンライン受注のみ表示" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <Label Content="備考" Width="40" Margin="10,0,0,0"/>
            <TextBox x:Name="SearchNoteTextBox" Width="100"/>
            <Button x:Name="SearchButton" Content="検索" Width="80" Margin="10,0,0,0" Click="SearchButton_Click"/>
            <Button x:Name="ClearSearchButton" Content="クリア" Width="80" Margin="5,0,0,0" Click="ClearSearchButton_Click"/>
            <Button x:Name="ImportCsvButton" Content="CSVインポート" Width="100" Margin="10,0,0,0" Click="ImportCsvButton_Click"/>
        </StackPanel>
        <!-- 一覧 -->
        <DataGrid x:Name="OrderDataGrid" Grid.Row="1" AutoGenerateColumns="False" SelectionMode="Single" Margin="0,0,0,10" SelectionChanged="OrderDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="注文ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="商品ID" Binding="{Binding ProductId}" Width="80"/>
                <DataGridTextColumn Header="商品名" Binding="{Binding ProductName}" Width="120"/>
                <DataGridTextColumn Header="顧客ID" Binding="{Binding CustomerId}" Width="80"/>
                <DataGridTextColumn Header="数量" Binding="{Binding Quantity}" Width="60"/>
                <DataGridTextColumn Header="単価" Binding="{Binding UnitPrice}" Width="80"/>
                <DataGridTextColumn Header="金額" Binding="{Binding Amount}" Width="80"/>
                <DataGridTextColumn Header="注文日" Binding="{Binding OrderDate, StringFormat=yyyy/MM/dd}" Width="100"/>
                <DataGridTextColumn Header="備考" Binding="{Binding Note}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- 入力欄・操作ボタン -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="商品ID" Width="60"/>
                <TextBox x:Name="ProductIdTextBox" Width="80"/>
                <Label Content="商品名" Width="60" Margin="10,0,0,0"/>
                <TextBox x:Name="ProductNameTextBox" Width="120"/>
                <Label Content="顧客ID" Width="60" Margin="10,0,0,0"/>
                <TextBox x:Name="CustomerIdTextBox" Width="80"/>
                <Label Content="数量" Width="40" Margin="10,0,0,0"/>
                <TextBox x:Name="QuantityTextBox" Width="60"/>
                <Label Content="単価" Width="40" Margin="10,0,0,0"/>
                <TextBox x:Name="UnitPriceTextBox" Width="80"/>
                <Label Content="金額" Width="40" Margin="10,0,0,0"/>
                <TextBox x:Name="AmountTextBox" Width="80"/>
                <Label Content="注文日" Width="60" Margin="10,0,0,0"/>
                <DatePicker x:Name="OrderDatePicker" Width="120"/>
                <Label Content="備考" Width="40" Margin="10,0,0,0"/>
                <TextBox x:Name="NoteTextBox" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="AddButton" Content="追加" Width="80" Margin="0,0,10,0" Click="AddButton_Click"/>
                <Button x:Name="UpdateButton" Content="更新" Width="80" Margin="0,0,10,0" Click="UpdateButton_Click"/>
                <Button x:Name="DeleteButton" Content="削除" Width="80" Click="DeleteButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window> 